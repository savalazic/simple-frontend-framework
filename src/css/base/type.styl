/**
 * Typography
 * ----------
 * Basic styles for textual elements.
 */

h1
  font-size rem(64px)
  margin-bottom rem(20px)

h2
  font-size rem(42px)
  margin-bottom rem(18px)

h3
  font-size rem(32px)
  margin-bottom rem(16px)

h4
  font-size rem(28px)
  margin-bottom rem(14px)

h5
  font-size rem(22px)
  margin-bottom rem(12px)
  letter-spacing rem(1px)

h6
  font-size rem(14px)
  margin-bottom rem(8px)
  letter-spacing rem(1px)
  font-weight 600

p
  font-size rem(18px)
  line-height 1.25

a
  color inherit
  text-decoration none

/**
 * Apply uppercase transform
 * to every title element.
 */
h1, h2, h3, h4, h5, h6
  text-transform uppercase

/**
 * Trim too long title elements.
 */
h1, h2, h3
  overflow hidden
  text-overflow ellipsis
